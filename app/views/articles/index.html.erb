<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<%= link_to "New article", new_article_path %>

<%= form_with(
  url: articles_path,
  method: :get,
  data: {
    controller: "submit-form",
    submit_form_target: "form",
  }
) do |f| %>
  <%= f.text_field(
    :query,
    value: @query,
    placeholder: "Search",
    data: {
      action: "input->submit-form#submit",
      disable_with: false
    }
  ) %>
<% end %>

<div id="articles">
  <div class="row">
    <% @articles.each do |article| %>
      <div class="card" style="width: 18rem;margin:2px;">
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <p class="card-text"><%= article.description %></p>
          <%= link_to "Show this article", article, class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>



